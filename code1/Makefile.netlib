# Makefile for Netlib-only version

FORTRAN = fl32
FFLAGS = -c

PROGRAM = code1_netlib_only.exe
SOURCE = code1_netlib_only.for

# Try with minimal netlib libraries - remove quadlib.lib that might be causing conflicts
LIBS = libslatec.lib libodepack.lib libquadpack.lib

all: $(PROGRAM)

$(PROGRAM): $(SOURCE)
	$(FORTRAN) $(SOURCE) $(LIBS)

clean:
	@if exist code1_netlib_only.obj del code1_netlib_only.obj
	@if exist $(PROGRAM) del $(PROGRAM)
